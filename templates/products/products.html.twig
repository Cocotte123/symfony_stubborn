{% extends 'base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
<main>
    <section class="container">
     <div class="col md-4" style="padding-top:40px;border: solid black 1px">
            <div class="custom-select">
                <select style="width:200px;display: block;margin-left: auto;margin-right: auto;">
                    <option value="0">Fourchette de prix</option>
                    <option value="1">10 à 29€</option>
                    <option value="2">30 à 35€</option>
                    <option value="3">35 à 50€</option>
                    <option value="4"></option>
                   
                </select>
            </div>
        </div>
        <div  class="row d-flex">
        {% for produit in produits %}
        
            <div class="col-md-4">
                <div class="card" style="width: 18rem;padding:10px;margin-bottom:20px;">
                    <img src="{{ asset('uploads/' ~ produit.image) }}" alt="{{ produit.name }}">
                    <div class="d-flex flex-row mx-auto" style="width: 90%;">
                        <div class="text-left"  style="width: 50%;">
                        <h5 class="card-title">{{ produit.name }}</h5>
                        <p class="card-text">{{produit.formattedPrice}}€</p>
                        </div>
                        <div class="align-self-center text-center"  style="width: 50%;">
                        <a href="{{path('app_product_detail', {id:produit.id})}}" class="btn btn-primary">Voir</a>
                        </div>
                    </div>
                </div>
            </div>
       
        {% endfor %}
        </div>
    </section>
</main>
{% endblock %}
