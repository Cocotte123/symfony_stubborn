{% extends 'base.html.twig' %}

{% block title %}détails produit{% endblock %}

{% block body %}

<div class="container mt-4" style="width: 70%;border: solid black 1px">
    <div class="row">
        <div class="col md-8">
            <img src="{{ asset('uploads/' ~ produit.image) }}" alt="{{ produit.name }}" style="width : 400px;display: block;margin-left: auto;margin-right: auto;">
        </div>
        <div class="col md-8">
            <div class="row">
                <div class="col md-4" style="padding-top:40px;">
                    <p style="font-size:2rem; font-weight:bold">{{ produit.name }}<p>
                    <p style="font-size:2rem; font-weight:bold">{{produit.formattedPrice}}€<p>
                </div>
                <div class="col md-4" style="padding-top:40px;">

                    {{form(sizeSelectForm)}}
                </div>
            </div>    
            <div class="row">
            {% if selectedSize is not null and selectedSize is not empty%}
                <div class="text-center" style="margin-top:20px;">
                    <a href="{{path('app_cart_add', {id:produit.id,size:selectedSize})}}" class="btn" style="width: 200px;border:solid black 1px;">Ajouter au panier</a>
                </div>
            {% else %}
            <div class="text-center" style="margin-top:20px;">
                    <p> Choisissez une taille</p>
                    <btn class="btn disabled" style="width: 200px;border:solid black 1px;">Ajouter au panier</btn>
                </div>
            {% endif %}
            </div>
        </div>

    </div>
</div>
{% endblock %}
