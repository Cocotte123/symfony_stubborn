{% extends 'base.html.twig' %}

{% block title %}Page administrateur{% endblock %}

{% block body %}
<main>
    <section class="container">
        <div class="mx-auto p-2" style="width: 90%;border:solid black 1px;margin-top:50px; margin-bottom:30px;background-color:#ff5733;">
       
           {{ form_start(productModifyForm) }}
            <div  class="row">

            
            
            <div class="col-md-2">
            {{ form_row(productModifyForm.name) }}
            </div>
            <div class="col-md-1">
            {{ form_row(productModifyForm.price) }}
            </div>
            <div class="col-md-1">
            {{ form_row(productModifyForm.XS) }}
            </div>
            <div class="col-md-1">
            {{ form_row(productModifyForm.S) }}
            </div>
            <div class="col-md-1">
            {{ form_row(productModifyForm.M) }}
            </div>
            <div class="col-md-1">
            {{ form_row(productModifyForm.L) }}
            </div>
            <div class="col-md-1">
            {{ form_row(productModifyForm.XL) }}
            </div>
       
            <div class="col-12 form-check text-end">     
            {{ form_row(productModifyForm.is_highlighted) }}
            </div>
            <div>
            <button type="submit">Sauvegarder</button>
            </div>
          

           
            </div>  
            {{ form_end(productModifyForm) }}


        </div>
    </section>
</main>
{% endblock %}
